@model Vidly.ViewModels.NewCustomerViewModel
@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>New Customer</h1>

@using (Html.BeginForm("Create", "Customers"))
{
    <div class="w-50">
        <div class="form-group">
            @Html.LabelFor(m => m.Customer.Name)
            @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control"})
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Customer.Birthdate)
            @Html.TextBoxFor(m => m.Customer.Birthdate, new { @class = "form-control"})
        </div>
        <div class="mt-2 form-check">
            @Html.LabelFor(m => m.Customer.IsSubscribedToNewsLetter, "Subscribed to Newsletter?")
            @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsLetter, new { @class = "form-check-input"})
        </div>
        <div class="mt-2 form-group">
            @Html.LabelFor(m => m.Customer.MembershipType)
            @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"),"Select Membership Type", new { @class = "form-select"})
        </div>
        <button type="Submit" class="btn mt-2 btn-primary">Save</button>
    </div>
    
} 