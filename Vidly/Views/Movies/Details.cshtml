@model Movie
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.Name</h1>
<ul>
    <li>Genre: @Model.Genre</li>
    <li>Release: @String.Format("{0}, {1} {2}, {3}", Model.Release.Value.DayOfWeek, getMonth(Model.Release.Value.Month), Model.Release.Value.Day, Model.Release.Value.Year)</li>
    <li>Date: @String.Format("{0}, {1} {2}, {3}", Model.Added.Value.DayOfWeek, getMonth(Model.Added.Value.Month), Model.Added.Value.Day, Model.Added.Value.Year)</li>
    <li>Number in Stoke: @Model.Stock</li>
</ul>


@{
    string getMonth(int id)
    {

        switch (id)
        {
            case(1):
                {
                    return "January";
                }
            case(2):
                {
                    return "February";
                }
            case(3):
                {
                    return "March";
                }
            case(4):
                {
                    return "April";
                }
            case(5):
                {
                    return "May";
                }
            case(6):
                {
                    return "June";
                }
            case(7):
                {
                    return "July";
                }
            case(8):
                {
                    return "August";
                }
            case(9):
                {
                    return "September";
                }
            case(10):
                {
                    return "October";
                }
            case(11):
                {
                    return "November";
                }
            case(12):
                {
                    return "December";
                }
            default: return "";
        }
    }
}