@model List<Movie>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movies</h1>
<button class="btn btn-primary mb-2" asp-action="New" asp-controller="Movies">New Movie</button>
<table class="table-bordered w-100 text-center">
    <thead class="border-5">
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var movie in Model)
        {
            <tr>
                <td><a asp-controller="movies" asp-action="details" asp-route-id="@movie.Id">@movie.Name</a></td>
                <td>@movie.Genre</td>
            </tr>
        }
    </tbody>
</table>
